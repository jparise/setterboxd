{
  "permissions": {
    "allow": [
      "Bash(ruff format:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit(*.py)",
        "hooks": [
          {
            "type": "command",
            "command": "ruff format \"$FILE_PATH\""
          }
        ]
      },
      {
        "matcher": "Write(*.py)",
        "hooks": [
          {
            "type": "command",
            "command": "ruff format \"$FILE_PATH\""
          }
        ]
      }
    ]
  }
}
